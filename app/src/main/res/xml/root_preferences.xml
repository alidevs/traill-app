<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<PreferenceCategory app:title="Profile">

		<EditTextPreference
			android:icon="@drawable/ic_card_icon"
			app:key="displayName"
			app:title="Display Name"
			app:useSimpleSummaryProvider="true" />

		<EditTextPreference
			android:icon="@drawable/ic_email_icon"
			app:key="email"
			app:title="Email"
			app:useSimpleSummaryProvider="true" />

		<EditTextPreference
			android:icon="@drawable/ic_driver_icon"
			app:key="role"
			app:title="Role"
			app:useSimpleSummaryProvider="true" />
	</PreferenceCategory>

	<PreferenceCategory app:title="App">

		<ListPreference
			android:defaultValue="1"
			android:entries="@array/languages"
			android:entryValues="@array/languages"
			android:icon="@drawable/ic_language_icon"
			android:key="languages_listPreference"
			android:title="App Language" />
	</PreferenceCategory>

<!--	TODO: Dark mode -->
</PreferenceScreen>